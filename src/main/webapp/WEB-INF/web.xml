<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>userservlet</servlet-name>
    <servlet-class>br.usp.marketvc.servlets.UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>userservlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>imageservlet</servlet-name>
    <servlet-class>br.usp.marketvc.servlets.ImageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>imageservlet</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>marketservlet</servlet-name>
    <servlet-class>br.usp.marketvc.servlets.MarketServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>marketservlet</servlet-name>
    <url-pattern>/market</url-pattern>
  </servlet-mapping>
  
</web-app>
